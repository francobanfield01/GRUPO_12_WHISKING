<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs', {title: 'Listado de Productos - The WhisKING Argentina'}) %>

    <body class="home">
        <%- include('../partials/header.ejs') %>

            <main class="home-main">
                <div>
                    <img src="/images/productos/banner.jpg" alt="Banner" width="100%" />
                </div>
                
                <section>
                    <div class="subtitle-home">
                        <h3 class="ofertas-home">TODOS LOS PRODUCTOS</h3>
                    </div>
                    <% products.forEach(products=> { %>
                        <div class="articulos">
                            <a href="/products/detail/ <%- products.id %>">
                            <article class="card-home">
                                <img src="images/products/<%- products.image %>" width="100%"
                                    alt="WHISKY GLENFIDDICH 15 AÃ‘OS HAND FILLED DISTILLERY BACTH 74" />
                                <div class="card-content-home">
                                    <h5><%- products.name %></h5>
                                    <p>$<%- toThousand(products.price) %></p>

                                </div>
                            </article>
                        </a>
                        </div>
                        <% }) %>
                </section>

            </main>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>