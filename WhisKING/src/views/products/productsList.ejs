<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs', {title: 'Listado de Productos - The WhisKING Argentina'}) %>

    <body class="home">
        <%- include('../partials/header.ejs') %>

            <main class="home-main">
               
                <section>
                    <div class="subtitle-home">
                        <h3 class="ofertas-home">TODOS LOS PRODUCTOS</h3>
                    </div>
                    <% products.forEach(product=> { %>
                        <div class="articulos">
                            <a href="/products/detail/<%- product.id %>">
                            <article class="card-home">
                                <img src="images/products/<%= product.images[0].name %>" width="100%"
                                    alt="<%- product.name %>"/>
                                <div class="card-content-home">
                                    <h5><%- product.name %></h5>
                                    <p>$<%- toThousand(product.price) %></p>

                                </div>
                            </article>
                        </a>
                        </div>
                        <% }) %>
                </section>

            </main>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>