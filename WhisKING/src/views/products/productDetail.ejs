<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head.ejs',  {title: `Detalle Producto: ${product.name} - The WhisKING Argentina`}) %> 

<body>
    <%- include('../partials/header.ejs')  %> 

    <main class="productDetail">
        <div class="productResponsive">
            <div class="img-container">
                <div class="second-img">
                    <% product.images.forEach(image => { %>
                        <img onclick="document.getElementById('imgMain').src = '/images/products/<%- image.name %>'" src="/images/products/<%- image.name %>" alt="">
                    <% }) %>
                </div>
                <div class="main-img">
                    <img id="imgMain" src="/images/products/<%- product.images[0].name %>" alt="">
                </div>
            </div>
            <div class="productResponsive2">
                <div class="nombreProducto">
                    <h2><%- product.name %> </h2>
                </div>
                <div class="productDescription">
                    <div class="precio">
                        <p>Precio: </p>
                        <p>$ <%- toThousand(product.price - product.price * product.discount / 100) %></p>
                        <span><%- product.discount > 0 ? `${product.discount} % OFF` : "" %></span>
                    </div>
                    <div class="button-container">
                        <button onclick="'<%=locals.user%>' ? addItem(event,'<%=product.id%>') : Swal.fire(
                            {
                                title: 'Debes loguearte',
                            text: 'Para adquirir nuestros productos',
                            icon: 'warning',
                            confirmButtonColor: '#a45323',

                            }
                          
                          )"  class="comprar btn-whisking">Comprar</button>                    
                    </div>
                </div>
            </div>
        </div>

        <div class="productDescription-text">
            <div class="pais-origen">
                <p>País de origen: </p>
                <p><%- product.origin  %></p>
            </div>
            <div class="text-description">
                <b>Descripción: </b><%- product.description %>
            </div>
            <div class="text-description">
                <b>Cata: </b><%- product.tasting %>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs')  %>
    <%- include('../partials/scripts.ejs')  %>

</body>
</html>