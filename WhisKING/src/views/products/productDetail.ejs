    <title>Product Details page</title>
    <link rel="stylesheet" href="">
    <!--hoja de estilo google fonts-->
    <link rel="stylesheet" href="/css/normalize.css">
    <!--hoja de estilo normalize-->
    <link rel="stylesheet" href="/css/style.css">
    <!--hoja de estilo-->
