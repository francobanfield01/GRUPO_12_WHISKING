<body>
    <header>
        <img src="images/logo.svg" alt="logo">

        <div class="container">

            <div class="buscar">
                <input type="text" class="search-bar" placeholder="Buscar...">
                <a href="" class="lupa_buscar">
                    <i class="fas fa-search fa-lg"></i>
                </a>
            </div>

        </div>

        <nav>
            <input type="checkbox" id="check">
            <label for="check" class="bar-btn">
                <i class="fas fa-bars"></i>
            </label>
            <ul class="nav-menu">
                <li><a href="">Ofertas</a></li>
                <li><a href="">Productos</a></li>
                <li><a href="">Carrito</a></li>
                <li><a href="">Ingresar</a></li>
            </ul>
        </nav>

    </header>
    <main class="productDetail">
        <div class="productResponsive">
            <div class="img-container">
                <div class="second-img">
                    <img src="/images/productos/whisky_01.jpeg" alt="">
                    <img src="/images/productos/whisky_02.jpeg" alt="">
                    <img src="/images/productos/whisky_03.jpeg" alt="">
                </div>
                <div class="main-img">
                    <img src="/images/productos/whisky_04.jpeg" alt="">
                </div>
            </div>
            <div class="productResponsive2">
                <div class="nombreProducto">
                    <h2>Nombre del producto</h2>
                </div>
                <div class="productDescription">
                    <div class="precio">
                        <p>Precio: </p>
                        <p>$10000</p>
                    </div>
                    <div class="button-container">
                        <button class="comprar btn-whisking">Comprar</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="productDescription-text">
            <div class="pais-origen">
                <p>País de origen: </p>
                <p>Escocia</p>
            </div>
