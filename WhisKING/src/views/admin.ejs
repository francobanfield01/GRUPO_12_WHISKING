<!DOCTYPE html>
<html lang="es">

<%- include('./partials/headAdmin.ejs', {title: 'Admin - The WhisKING Argentina' })%>

    <body class="body-create">
        <%- include('./partials/headerAdmin.ejs')%>
            <main class="row  my-5">
                <div class="col-12 col-md-10 col-lg-8 mx-auto">


                    <div class="card shadow">
                        <div class="card-header">
                            <h4>Productos</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Imagen</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Precio</th>
                                            <th scope="col">Stock</th>
                                            <th scope="col">Categoría</th>
                                            <th scope="col">Acciones</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(product=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= product.id %>
                                                </th>
                                                <td><img class="w-50"
                                                        src="/images/products/<%= product.images[0].name %>" alt="">
                                                </td>
                                                <td>
                                                    <%= product.name %>
                                                </td>
                                                <td>
                                                    <%= product.price %>
                                                </td>
                                                <td>
                                                    <%= product.stock %>
                                                </td>
                                                <td>
                                                    <%= product.category.name %>
                                                </td>
                                                <td class="d-flex">
                                                    <button type="button" class="mx-1 btn btn-sm btn-primary" data-bs-toggle="modal"
                                                    data-bs-target="#viewProduct<%= product.id %>">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                    <a class="mx-1 btn btn-sm btn-success" href="/products/edit/<%= product.id %>"><i
                                                            class="fas fa-edit"></i></a>
                                                    <a class="mx-1 btn btn-sm btn-danger" href=""><i
                                                            class="fas fa-trash-alt"></i></a>
                                                </td>

                                            </tr>

                                            <!-- Button trigger modal -->
                                           

                                            <!-- Modal -->
                                            <div class="modal fade" id="viewProduct<%= product.id %>" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                      
                                                        <div class="modal-body">
                                                            <main class="productDetail">
                                                                <div class="productResponsive">
                                                                    <div class="img-container">
                                                                        <div class="second-img">
                                                                            <% product.images.forEach(image => { %>
                                                                                <img src="/images/products/<%- image.name %>" alt="">
                                                                            <% }) %>
                                                                        </div>
                                                                        <div class="main-img">
                                                                            <img src="/images/products/<%- product.images[0].name %>" alt="">
                                                                        </div>
                                                                    </div>
                                                                    <div class="productResponsive2">
                                                                        <div class="nombreProducto">
                                                                            <h2><%- product.name %> </h2>
                                                                        </div>
                                                                        <div class="productDescription">
                                                                            <div class="precio">
                                                                                <p>Precio: </p>
                                                                                <p>$ <%- toThousand(product.price - product.price * product.discount / 100) %></p>
                                                                                <span><%- product.discount > 0 ? `${product.discount} % OFF` : "" %></span>
                                                                            </div>
                                                                            <div class="button-container">
                                                                                <button class="comprar btn-whisking">Comprar</button>                    
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                        
                                                                <div class="productDescription-text">
                                                                    <div class="pais-origen">
                                                                        <p>País de origen: </p>
                                                                        <p><%- product.origin  %></p>
                                                                    </div>
                                                                    <div class="text-description">
                                                                        <b>Descripción: </b><%- product.description %>
                                                                    </div>
                                                                    <div class="text-description">
                                                                        <b>Cata: </b><%- product.tasting %>
                                                                    </div>
                                                                </div>
                                                            </main>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <% }) %>


                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </main>
            <%-include('./partials/footerAdmin.ejs')%>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    </body>

</html>